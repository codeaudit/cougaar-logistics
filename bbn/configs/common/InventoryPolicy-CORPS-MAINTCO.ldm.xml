<?xml version="1.0"  encoding="US-ASCII"?>

<!DOCTYPE Policy SYSTEM "Policy.ldm.dtd" []>

<!-- Inventory Policy for FSB, et al: First Level Supply units -->

<Policies>

<Policy name="SparePartsPolicy" type="org.cougaar.logistics.plugin.inventory.InventoryPolicy">
    <RuleParam name="ResourceType">
      	<String value ="Consumables">
	</String>
    </RuleParam>
    <RuleParam name="Critical">
	<Integer value="3" min="1" max="90"> 
	</Integer>
    </RuleParam>
    <RuleParam name="SupplierAdvanceNoticeTime">
        <Integer value="97" min="1" max="100">
	</Integer>
    </RuleParam>
    <RuleParam name="ReorderPeriod">
        <Integer value="3" min="1" max="30">
	</Integer>
    </RuleParam>
    <RuleParam name="HandlingTime">
        <Integer value="2" min="1" max="30">
	</Integer>
    </RuleParam>
    <RuleParam name="TransportTime">
        <Integer value="1" min="0" max="300">
        </Integer>
    </RuleParam>
    <RuleParam name="OrderShipTime">
        <Integer value="3" min="0" max="300">
        </Integer>
    </RuleParam>
  </Policy>

 </Policies>
